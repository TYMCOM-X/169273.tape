.		else Tmp _ "nam"[2 for inf]&".HDR";
.	    macro  x (q) $(ToList _ ToList & "\q{break}";)$;
.	    require Tmp source!file;
.	    macro  x $()$;
.	END ELSE START
.	    ToList _ ToList & "\nam{break}";
