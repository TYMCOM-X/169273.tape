.macro	to (nam) $(BEGIN
.	IF "@"="nam"[1] THEN START
.	    Tmp _ "nam"[2 for inf];
.	    Brk _ null;
.	    Tmp _ scan (Tmp,".",null,"IS",Brk);
.	    if Brk="." 
