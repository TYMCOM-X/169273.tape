!       print(crlf,"ExcpArr[",i,",1]=",
!       !lh( ExcpArr[i,1] ),"-",
!       CvSTim( !rh( ExcpArr[i,1] ) ) );  
! 
! print( crlf,"GREF=",GREF );

END "Next Run Time";
