    simple string procedure BNF!(integer CMD); begin "BNF!"
      own integer FUX; own itemvar X; own string BNF;
      BNF:="<"&CMD![CMD]&"-COMMAND> ::= "&CMD![CMD];
      foreach X | X in ARG!(CMD)
        do BNF:=BNF & " [<"&cvis(X,FUX)&">]";
      return(BNF);
      end "BNF!"};


