    integer BP;

    arrclr( Buffer, cvasc("     ") );	! clear the display ;

    Case ( ThisScreen )
     of begin "do right screen"
	[DpyHand]  DisplayHand;		! show of hands ;
	[DpyHelp]  DisplayHelp;		! help message  ;
	[Else]      begin
		    end
     end "do right screen";

