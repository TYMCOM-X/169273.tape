    own real itemvar RI;
    own integer itemvar II;
    own integer BRK;
Ifcr PRELIMINARY thenc
    If swPRINT land P$$ITM then print("Mov: SRC[",typeit(SRC),
				"] ==> DST[",typeit(dst),"] ");
endc
