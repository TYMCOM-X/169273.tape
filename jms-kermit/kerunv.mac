TOPS10<
	.FDNMM==FDXSIZ			; Name mask
	.FDEXM==.FDNMM+1		; Extension mask
	.FDDIM==.FDEXM+1		; Offset to the directory mask
	.FDSFM==.FDDIM+1		; First SFD mask
	.FDMOD==.FDSFM+5		; Mod word
