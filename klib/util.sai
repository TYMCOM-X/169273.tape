==========================================================================;
!! title Rtn Scan.Token ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=			      Rtn Scan.Token				  =
=                                                                         =
=                                                                         =
====================================+======================================


	! <<  What about returning Brk?


==========================================================================;


  internal simple string procedure Scan.Token (reference string Str);
  begin "Scan.Token"
    integer
      Brk,
      Tok.Tbl;
    string
      Tmp;

    setbreak(Tok.Tbl _ getbreak, (crlf & sp & ht), (crlf & sp & ht), "ISNT");
    Tmp _ scan(Str, Tok.Tbl, Brk);
    relbreak(Tok.Tbl);
    return(Tmp);
  end "Scan.Token";


