!! title Rtn Frame.Lic ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=			       Rtn Frame.Lic				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


	Return the frame license value for a given frame.


==========================================================================;


  internal simple integer procedure Frame.Lic (integer Frame(-1));
  begin "Frame.Lic"
    return(rh(GetTab(Frame, -'20)));
  end "Frame.Lic";


