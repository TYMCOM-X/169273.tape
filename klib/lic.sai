!! title Rtn Oper.Lic ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=			       Rtn Oper.Lic				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  string
    Oper.Name;


! ========================================================================;


  internal integer procedure Oper.Lic (string OPN(null));
  begin "Oper.Lic"
    long real
      Name;
    integer
      Hash,
      Lic,
      Ptr,
      OP,
      EOF;
    integer array
      Buf[0:'777];
    string
      Tmp;


    define
      bomb (X) =
      <
	begin
	  print(X, crlf);
	  release(OP);
	  Oper.Name _ null;
	  return(0)
	end
      >;

    define
      SILENTLY = <true>,
      Bfnm1    = 0,
      Bfnm2    = 1,
      Bfpsw    = 2,
      Bflic    = 3,
      Nm1      = <location(Name)>,
      Nm2      = <location(Name)+1>
    ;

    if (length(OPN)) then
      Tmp _ OPN
    else
      while (true) do
      begin
	Tmp _ Prompt.User("Oper name: ");

	if (Tmp = "?") then
	  print("Enter your name as it appears in the OPER",
	      " license file.", crlf)
	else
	  done;
      end;

    if (length(Tmp) = 0) then
      bomb("?no name given");

    Name _ Cv.Name(Oper.Name _ Tmp);

    while (true) do
    begin
      Tmp _ Prompt.User("Password: ", SILENTLY);

      if (Tmp = "?") then
	print("?", crlf,
	    "Enter your password associated with the OPER name ",
	    Oper.Name, ".", crlf)
      else
	done;
    end;

    Hash _ Cv.Hash(Tmp);
    print(crlf);
    auxclv(-1, 0, '11);
    open(OP _ GtChan, "SYS", '17, 0, 0, 0, 0, EOF _ true);

    if (EOF) then
      bomb("?Can't init SYS:");

    begin "Lookup"
      define
	!CHLK = '4		! CHANIO lookup function;,
	!RBLic = '14		! RIB address of file license;
      ;

      integer array
	XL[0:!RBLic];

      XL[0] _ arrinfo(XL, 2);
      XL[2] _ cvsix("DRWSPR");
      XL[3] _ cvsix("EPO");
      chnior(OP, XL[0], !CHLK);

      if (not !SKIP!) then
	bomb("?OPER password file not found");

      if ((XL[!RBLic] land '400000) = 0) then 
	bomb("?OPER password file has no license");
    end "Lookup";

    do
    begin "Search"
      arryin(OP, Buf[0], '1000);

      if (EOF) then
	done "Search";

      for Ptr _ 0 step 7 until '770 do
      begin "Try"
	if (Buf[Ptr + Bfnm1] neq memory[Nm1]) then
	  continue "Try";

	if (Buf[Ptr + Bfnm2] neq memory[Nm2]) then
	  continue "Try";

	EOF _ Buf[Ptr + Bfpsw] neq Hash;
	Lic _ Buf[Ptr + Bflic];
	done "Search";
      end "Try";
    end "Search"
    until (EOF);

    close(OP);
    release(OP);

    if (EOF) then
    begin
      print("?Bad name or password", crlf);
      return(0);
    end;

    return(Lic);
  end "Oper.Lic";


