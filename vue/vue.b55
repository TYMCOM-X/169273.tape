		mark_.lowend;				!   means set mark
		ToPrompt(plit asciz 'Mark set')
		end
	else begin					! else any arg
		mark_0;					!   means to clear it
		ToPrompt(plit asciz 'Mark cleared')
		end;
        repcount_1
	end;

global routine horizspace (tc) =
