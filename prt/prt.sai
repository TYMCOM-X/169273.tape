!! title SubRtn Title.Line ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=			     SubRtn Title.Line				  =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  simple boolean procedure Title.Line (string Line);
  begin "Title.Line"
    integer Brk;


    return(
	Line[1 for 1] = "!" and
	(Starts.With(Line _ scan(Line, Blk.Tbl, Brk), "!title") or
	Starts.With(Line, "!!title"))
    );
  end "Title.Line";


