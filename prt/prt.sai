==========================================================================;
!! title SubRtn Top.Of.Page ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=			    SubRtn Top.Of.Page				  =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  simple string procedure Top.Of.Page (boolean Foot.Sw);
  begin "Top.Of.Page"
    return
    (
      (
	if (Foot.Sw) then
	  (Do.Trailer & Do.Bottom.Margin)
	else
	  (null)
      ) &

      Do.Top.Margin &
      Do.Heading
    );
  end "Top.Of.Page";


