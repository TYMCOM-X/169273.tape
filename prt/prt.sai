=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  procedure Copy.Text (r!p ($File)  Src, Dst);
  begin "Copy.Text"
    define  LM   = <Blanks(Left.Margin)>;
    define  TW   = <8>;					! Tab width;


! ========================================================================;
!! title SubRtn RM ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=				 SubRtn RM				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  simple string procedure RM (integer I);
  begin "RM"
    string Tmp;


    Tmp _ null;

    if (Block.Trace.Switch and (Scope.Begin or Scope.End)) then
    begin
      if (not Wrap.Flg) then
	Tmp _ Tmp & " |";

      if (Scope.End) then
	inc(I);

      Tmp _ Tmp & cvs(I) & "|";
    end;

    return(Tmp);
  end "RM";


