!! title Rtn F.Error ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=                              Rtn F.Error                                =
=                                                                         =
=                                                                         =
====================================+======================================


	! <<  This could be much smarter.


==========================================================================;


  integer procedure F.Error (r!p ($File) Ptr);
  begin "F.Error"
    integer Tmp;


    Tmp _ $$Eof(Ptr);

    print(">> ");

    if (Tmp = -1) then
      print("Device """, $$Device(Ptr), ":"" not availible.")
    else
    begin
      print (case (0 max rh(Tmp) min 4) of
	  ("No Such File ",
	  "Illegal PPN ",
	  "Protection ",
	  "Busy ",
	  "???? "));
      print("""", $$Full.Name(Ptr), """.");
    end;

    print(crlf2);
    return(NON.FATAL);
  end "F.Error";


