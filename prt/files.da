!! title Rtn Close.File ;
! ====================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=                             Rtn Close.File                              =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  procedure Close.File (r!p ($File) Ptr);
  begin "Close.File"
    if (Ptr = ALL.FILES) then
      while (Open.File.Hdr neq n!r) do
      begin
	release($$Chan($Open.File:Fp[Open.File.Hdr]));
	Open.File.Hdr _ $Open.File:Nr[Open.File.Hdr];
      end
    else
    begin
      Del.Open(Ptr);
      release($$Chan(Ptr));
    end;
  end "Close.File";


