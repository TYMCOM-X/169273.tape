!! title Rtn Open.File ;
! =========================================================================
====================================+======================================
=                                                                         =
=                                                                         =
=                             Rtn Open.File                               =
=                                                                         =
=                                                                         =
====================================+======================================


==========================================================================;


  r!p ($File) procedure Open.File (string Fnam; integer Mode);
  begin "Open.File"
    r!p ($File) Q;
    string  T;
    integer Brk;
    integer M;
    integer Ibuf;
    integer Obuf;
    integer array SLB[0:5];

    define  $F.BUFS  = 4;		! Number of buffers for I/O;
    define  $F.COUNT = 200;		! Maximum line length;


    Q _ new!record($File);
    Ibuf _ Obuf _ 0;

    if (Mode land $F.INPUT) then
    begin
      Ibuf _ $F.BUFS;
      M _ 0;
      $$Count(Q) _ $F.COUNT;
    end
    else if (Mode land $F.OUTPUT) then
    begin
      Obuf _ $F.BUFS;
      M _ 0;
      $$Count(Q) _ 0;
    end
    else if(Mode land $F.UPDATE) then
    begin
      Ibuf _ Obuf _ 1;
      M _ $$Count(Q) _ 0;
    end;

    Parse(Fnam, $$Device(Q), $$User(Q), $$Name(Q), $$Ext(Q));

    if (length($$User(Q))) then
      $$Full.Name(Q) _ "(" & $$User(Q) & ")"
    else
      $$Full.Name(Q) _ null;

    $$Full.Name(Q) _
	$$Full.Name(Q) & $$Name(Q) &
	(if (length($$Ext(Q))) then
	  ("." & $$Ext(Q))
	else
	  (null));

    $$Chan(Q)   _ getchan;
    $$Mode(Q)   _ M;
    $$Ibuf(Q)   _ Ibuf;
    $$Obuf(Q)   _ Obuf;

    open($$Chan(Q),
	$$Device(Q),
	$$Mode(Q),
	$$Ibuf(Q),
	$$Obuf(Q),
	$$Count(Q),
	$$Brchr(Q),
	$$Eof(Q) _ true
    );

      ! <<  Eof indicates bad device;

    if (Mode land $F.SETPL) then
      setpl($$Chan(Q), $$Linnum(Q), $$Pagnum(Q), $$Sosnum(Q));

    if (not $$Eof(Q)) then
      if (Ibuf) then
	lookup($$Chan(Q),
	    $$Full.Name(Q),
	    $$Eof(Q) _ true);

	! <<  Eof indicates lookup failure;

      if (Obuf) then
	enter($$Chan(Q),
	    $$Full.Name(Q),
	    $$Eof(Q) _ true);

	! <<  Eof indicates enter failure;

    if (Mode land $F.SETPL) then
      $$Pagnum(Q) _ 1;

    if ($$Eof(Q)) then
      release($$Chan(Q))
    else
    begin			! <<  What does this do for output files?;
      integer Day;
      integer Time;


      fileinfo(SLB);

      Day  _ (((SLB[1] land '140000) lsh -2) lor (SLB[2] land '007777));
      Time _ ((SLB[2] land !xwd('000037, '770000)) lsh -12);

      $$Cr.Date(Q) _ DayTime(Day, Time);
      Add.Open(Q);
    end;

    return(Q);
  end "Open.File";


