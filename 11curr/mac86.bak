; Assembler psuedo-ops - macros that track $ along with .

;  $ORG - set origin (establishes new values for both . and $)
	.MACRO	$ORG,X
	.=X
	$=X
	.ENDM

;  $BYTE - generate an initialized byte
	.MACRO	$BYTE,X
	.BYTE	X
	$=.
	.ENDM

;  $WORD - generate an initialized word
	.MACRO	$WORD,X
	.BYTE	<X>&^O377
	.BYTE	<X>&^O177400/^O400
	$=.
	.ENDM

