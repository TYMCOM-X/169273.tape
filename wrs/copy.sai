!! title Rtn Frmopr ;
! =========================================================================
=====================================+=====================================
=                                                                         =
=                                                                         =
=				Rtn Frmopr				  =
=                                                                         =
=                                                                         =
=====================================+=====================================


==========================================================================;


  simple integer procedure Frmopr (
      integer Fd;
      reference integer Arg;
      integer Fn;
      boolean Silent (false));

  begin "Frmopr"
    own integer
      Err;


    start!code
      move	1, Fd;
      hrl	1, Fn;
      setom	!skip!;
      !Frmop	1, Arg;
       setzm	!skip!;
      movem	1, Err;
    end;

    if (not (!skip! or Silent)) then
      print (
	  "?FRMOP '",     cvos(Fn),
	  " for Fd = '",  cvos(Fd),
	  ", Arg = '",    cvos(Arg),
	  ", Err = '",    cvos(Err), crlf,
	  Frmop.Err[Err], crlf
      );

    return(Err);
  end "Frmopr";


