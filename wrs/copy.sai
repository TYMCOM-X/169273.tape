  integer procedure CvPpn (string User);
  begin "CvPpn"
    integer
      Chan,
      Err;
    integer array
      X [0:3],
      U [0:1];


    X[0] _ 3;
    X[1] _ xwd(1, 1);
    X[2] _ location(U[0]);
    X[3] _ cvsix("UFD");
    U[0] _ cvsix(User[1 for 6]);
    U[1] _ cvsix(User[7 for 6]);

    open(Chan _ getchan, "DSK", $F.ASCII, 0, 0,  0, 0, Err);

    if (Err) then
      usererr(0, 0, "?Can't init disk");

    chnior(Chan, X[0], 4);

    if (not !skip!) then
      usererr(0, 0, "?No UFD for user " & User);

    release(Chan);
    return(X[2]);
  evPpn";


