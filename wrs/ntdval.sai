    string S;
    if HDX then print( crlf&
	"XXXXXXXXXXXXXXX"&#cr&
	"WWWWWWWWWWWWWWW"&#cr&
	"OOOOOOOOOOOOOOO"&#cr&
	"QMEUXTDHEGSOKGR"&#cr );
    S := inchwl;
