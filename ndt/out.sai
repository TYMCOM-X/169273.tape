simple procedure setup!buffers;
begin	integer i;
	own safe integer array buffer[0:3,0:buffer!chars div 4 - 1];
for i := 0 step 1 until 3 
   do begin
	buffer!base[i] := point(8,buffer[i,0],-1);
	buffer!room[i] := buffer!chars;
	buffer!pointer[i] := buffer!base[i];
      end;
end;
require setup!buffers initialization;

! flush buffer destined for target process "whom" (complain if empty);
routine flush!buffer( integer whom );
begin	string packet;
packet := construct!string( buffer!base[whom],
				buffer!chars - buffer!room[whom] );
if buffer!pointer[whom] < 0
 then usererr(0,1,"Two flushes without data!");

print!packet( packet ); 

buffer!room[whom] := buffer!chars;
buffer!pointer[whom] := buffer!base[whom];
end;
routine sendOne( integer target, aByte ); 
begin
idpb(aByte, buffer!pointer[target] );
if dec(buffer!room[target]) < 2 then flush!buffer(target);
end;

routine sendTwo( integer target, aByte, nextByte ); 
begin
idpb(aByte, buffer!pointer[target]);
idpb(nextByte, buffer!pointer[target]);
if dec(buffer!room[target],2) < 2 then flush!buffer(target);
end;

routine sendShortStream( integer target, aByte; string rest ); 
begin	integer ptr;
while buffer!room[target] <= length(rest) do flush!buffer(target);
dec(buffer!room[target],1+length(rest));
ptr := buffer!pointer[target];
idpb(aByte, ptr);
while length(rest) do idpb( lop(rest), ptr );
buffer!pointer[target] := ptr;
if buffer!room[target] < 2 then flush!buffer(target);
end;

