!	Run (program,[start])

	Run another program (overlay).  Program name may contain
	user name and program name, no device.
;

procedure Run (
	string 	File; 
	integer Start(0) );
begin "run"
    integer array RNB[0:5];
    Parse (File, RNB[1], RNB[2], RNB[4]);
    RNB[0] _ cvsix("DSK");
    RNB[3] _ RNB[5] _ 0;
    calli ((Start lsh 18) + location(RNB[0]), '35);
end "run";


