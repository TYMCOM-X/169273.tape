!! title Rtn C!Arg ;
! Pick up a numeric agrument and set C!ArgV.
! 
! This command is 'invisible' in that it uses some magic to
! cause Dispatch() to forget that we were just dispatched to.
! This prevents C!LastCmd from pointing to us, and enables
! ^K to work correctly.
;

simple procedure C!Arg;
  begin "arg"
    own integer C, N, P;

    if ( C!ArgV = 0 ) then
      C!ArgV _ 1;

    W!Msg( "Arg: " & cvs(C!ArgV * C!ArgMultiplier) );
    P _ N _ 0;

    forever do
      begin "get arg"
        C _ C!GetC;
        if ( C < "0" or C > "9" ) then done "get arg";
        P _ true;
        N _ N * 10 + ( C - "0" );
        W!Msg( "Arg: " & cvs( C!ArgV * N ) );
      end "get arg";

    C!Macro _ C & C!Macro;

    if (C!DefiningMacro) then
      C!LastMacro _ C!LastMacro[1 for inf-1];

    if ( P ) then C!ArgV _ C!ArgV * N
    else C!ArgV _ C!ArgV * C!ArgMultiplier;

    W!Msg( NULL );

    C!Cmd _ -1;                ! cause Dispatch() to forget us ;

  end "arg";
!! title Rtn C!SetArgFromVar ;
!  The user specifies a variable from which to load the argument
;

simple procedure C!SetArgFromVar;
begin "C!SetArgFromVar"
  integer
    Addr;

  C!ArgV _ 0;

  if ( not  C!ReadString( "Variable: ", CR, ESC )) then
  begin
    W!Msg( "Aborted" );
    return;
  end;

  Addr _ SymVarAddr( C!String );

  if ( Addr <= 0 ) then
    Case ( -Addr ) of
    begin
      [0] W!Msg( "Variable: "& C!String &" is unknown" );
      [1] W!Msg( "Variable: "& C!String &" is ambigious" )
    end
  else
  begin
    C!ArgV _ memory[Addr, integer];
    W!Msg("Arg: " & cvs(C!ArgV));
    C!Cmd _ -1;
  end;
end "C!SetArgFromVar";
